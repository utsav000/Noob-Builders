<% layout('layouts/boilerplate') %>

<div id="cluster-map"></div>

<h1>All Campgrounds</h1>

<ul>
    <% for(let complaint of complaints) { %>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= complaint.name %>
                        </h5>
                        <p class="card-text">
                            <%= complaint.complaint %>
                        </p>
                        <a class="btn btn-primary" href="/campgrounds/<%= complaint._id %>">
                            View <%= complaint.email %>
                        </a>
                        <button class="btn btn-success resolve-complaint-button" >
                            Resolve Complaint
                        </button>
                        
                    </div>
                </div>
            </div>
        </div>
    <% } %>
</ul>
<script>
    // Add a click event listener to the "Resolve Complaint" button
    document.querySelectorAll('.resolve-complaint-button').forEach(button => {
        button.addEventListener('click', async function () {
            const { ObjectID } = require('mongodb');
            const complaintId = new ObjectID();
      
            
            const confirmation = confirm('Are you sure you want to resolve this complaint?');
            
            if (confirmation) {
                try {
                    const response = await fetch(`/complaints/${complaintId}`, {
                        method: 'DELETE',
                    });
                

                    if (response.ok) {
                        // The complaint was successfully deleted
                        this.closest('.complaint-container').remove();
                    } else {
                        const errorData = await response.json();
                        console.error(errorData);
                        alert('Failed to resolve the complaint.');
                    }
                } catch (error) {
                    console.error(error);
                    alert('An error occurred while deleting the complaint.');
                }
            }
        });
    });
</script>


